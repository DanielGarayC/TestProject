                <div id="graficos"></div>
                <div class="sensor-values">
                  <h3>Valores Registrados</h3>
                  <p><strong><%= valorTemperatura.nombre %>: </strong><%= valorTemperatura.valor %></p>
                  <p><strong><%= valorHumedad.nombre %>: </strong><%= valorHumedad.valor %></p>
              </div>
                
